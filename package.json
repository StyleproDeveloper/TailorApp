{
  "name": "tailorapp-fullstack",
  "version": "1.0.0",
  "description": "Full-stack Tailor App with Flutter frontend and Node.js backend",
  "scripts": {
    "install:backend": "cd backend && npm install",
    "install:frontend": "flutter pub get",
    "install:all": "npm run install:backend && npm run install:frontend",
    "start:backend": "cd backend && npm run dev",
    "start:frontend": "flutter run -d chrome --web-port 8144 --release",
    "start:dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "build:frontend": "flutter build web --release",
    "build:all": "npm run build:frontend",
    "deploy:prepare": "./scripts/deploy.sh",
    "deploy:frontend": "echo 'Deploy frontend to Vercel: https://vercel.com/new'",
    "deploy:backend": "echo 'Deploy backend to Railway: https://railway.app/new'",
    "clean": "flutter clean && cd backend && rm -rf node_modules",
    "test:backend": "cd backend && npm test",
    "lint:backend": "cd backend && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "flutter",
    "nodejs",
    "express",
    "mongodb",
    "tailor",
    "business-management"
  ],
  "author": "Your Name",
  "license": "MIT"
}

